<Window x:Class="MTGSetGenerator.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="480"
        Background="#262626"      
        ResizeMode="CanMinimize"
        SizeToContent="Height"
        Title="Error">
    <DockPanel Margin="10">
        <!-- Title -->
        <TextBlock DockPanel.Dock="Top" Margin="0 0 0 5" Style="{StaticResource tbl_Header}">Error</TextBlock>

        <!-- OK Button -->
        <Button Name="b_OK" Click="b_OK_Click" Content="OK" DockPanel.Dock="Bottom" Width="125" />

        <TextBlock Name="tbl_ErrorMessage" Style="{StaticResource tbl_Error}" TextWrapping="Wrap" VerticalAlignment="Center">
            Default error message. <LineBreak/>
            Be sure to change.
        </TextBlock>
    </DockPanel>
</Window>
