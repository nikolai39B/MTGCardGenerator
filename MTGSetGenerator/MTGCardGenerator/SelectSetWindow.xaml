<Window x:Class="MTGSetGenerator.SelectSetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="360" Width="480"
        Background="#262626"         
        ResizeMode="CanMinimize"
        Title="Select Set">
    <DockPanel Margin="10">
        <!-- Title -->
        <TextBlock DockPanel.Dock="Top" Margin="0 0 0 5" Style="{StaticResource tbl_Header}">Select Set</TextBlock>

        <!-- Navigation Buttons -->
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="33*" />
                <ColumnDefinition Width="33*" />
                <ColumnDefinition Width="33*" />
            </Grid.ColumnDefinitions>
            <Button Name="b_AddNewSet" Click="b_AddSet_Click" Content="Add New Set" Grid.Column="1" Width="125" />
            <Button Name="b_Cancel" Click="b_Cancel_Click" Content="Cancel" Grid.Column="2" Width="125" />
        </Grid>

        <StackPanel VerticalAlignment="Center">
            
        </StackPanel>
            
    </DockPanel>
</Window>

