<UserControl x:Class="MTGSetGenerator.PlaneswalkerAbilityRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="200" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="63*" />
        </Grid.ColumnDefinitions>

        <TextBox Name="tb_AbilityCost" Grid.Column="0" TextChanged="tb_UiElement_TextChanged" VerticalAlignment="Center" />
        <TextBox Name="tb_AbilityText" AcceptsReturn="True" Grid.Column="2" TextChanged="tb_UiElement_TextChanged" Height="50" />
    </Grid>
</UserControl>
